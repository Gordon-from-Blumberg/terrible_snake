<?xml version="1.0" encoding="UTF-8"?>
<project name="terrible_snake" default="build" basedir=".">
    <property file="build.properties"/>

    <property name="src.dir" value="src"/>
    <property name="output.classes.dir" value="classes"/>
    <property name="exlude.files" value="**/example.java"/>

    <fileset id="fileset.lib" dir="lib">
        <include name="*.jar"/>
    </fileset>

    <fileset id="settings" dir="src/main/settings">
        <include name="*.json"/>
    </fileset>

    <fileset id="dictionary" dir="src/main/dictionary">
        <include name="*dictionary.properties"/>
    </fileset>

    <path id="classpath">
        <fileset refid="fileset.lib"/>
    </path>

    <target name="build" depends="compile, copy-resources">
        <jar basedir="${output.classes.dir}" destfile="${build.dir}/${ant.project.name}.jar">
            <include name="**"/>
        </jar>
    </target>

    <target name="compile">
        <mkdir dir="${output.classes.dir}"/>
        <javac srcdir="${src.dir}"
               destdir="${output.classes.dir}"
               classpathref="classpath"
               encoding="${javac.encoding}"
               debug="${compile.debug}"
               source="1.8"
               target="1.8">

            <exclude name="${exlude.files}"/>
        </javac>
    </target>

    <target name="copy-resources">
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${build.dir}/settings"/>
        <mkdir dir="${build.dir}/dictionary"/>

        <copy todir="${build.dir}/settings">
            <fileset refid="settings"/>
        </copy>
        <copy todir="${build.dir}/dictionary">
            <fileset refid="dictionary"/>
        </copy>
    </target>
</project>